{
  "name": "kitsu-launcher",
  "version": "0.1.0",
  "description": "Your anime/manga tracker for Kitsu",
  "main": "src/main.js",
  "scripts": {
    "react-start": "parcel -p 3000 index.html --out-dir build",
    "react-build": "parcel build index.html --out-dir build --public-url ./",
    "lint": "eslint src/",
    "electron-build": "electron-builder -mwl",
    "clean-build": "rm -rf build/ .cache dist/",
    "build": "yarn clean-build && yarn react-build && yarn electron-build",
    "start": "electron .",
    "debug": "electron --inspect-brk=4884 .",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "author": "Alperen Elhan <alperen@elhan.io>",
  "license": "MIT",
  "dependencies": {
    "antd": "^3.25.2",
    "axios": "^0.19.0",
    "debug": "^4.1.1",
    "electron-is-dev": "1.1.0",
    "kitsu": "^7.1.0",
    "overlayscrollbars": "^1.10.0",
    "overlayscrollbars-react": "^0.2.0",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "styled-components": "^4.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "build": {
    "appId": "io.elhan.KitsuLauncher",
    "files": [
      "src/main.js",
      "src/assets/*",
      "build/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "src/assets/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/logo.png"
    },
    "linux": {
      "target": [
        "deb",
        "appimage"
      ],
      "icon": "src/assets/logo.png",
      "category": "Utility"
    }
  },
  "browserslist": [
    "last 1 electron version",
    "last 2 chrome version"
  ],
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-angular": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@storybook/addon-actions": "^5.2.6",
    "@storybook/addon-links": "^5.2.6",
    "@storybook/addons": "^5.2.6",
    "@storybook/react": "^5.2.6",
    "babel-eslint": "^10.0.3",
    "babel-plugin-import": "^1.12.2",
    "cross-env": "6.0.3",
    "electron": "7.1.2",
    "electron-builder": "21.2.0",
    "eslint": "^6.7.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "parcel-bundler": "1.12.4",
    "prettier": "^1.19.1"
  }
}
